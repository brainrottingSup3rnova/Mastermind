<Window x:Class="MastermindStep2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MastermindStep2"
        mc:Ignorable="d"
        Title="MasterMind" Height="450" Width="800">
    <Grid Background="#FFCAE9EF">
        <Label x:Name="lblBene" Content="BENVENUTO SU MASTERMIND" Margin="165,52,131,315" FontSize="54" FontFamily="Bahnschrift SemiBold Condensed" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.325"/>
                    <RotateTransform Angle="0.628"/>
                    <TranslateTransform Y="0"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button x:Name="btnGiocaOra" Content="GIOCA ORA" FontSize="30" FontFamily ="Bahnschrift SemiBold Condensed" Margin="285,176,285,197" Background="#FF92DAA0" Click="Button_Click_GiocaOra">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="btnRegole" Content="REGOLE" FontSize="30" FontFamily="Bahnschrift SemiBold Condensed" Margin="285,255,285,118" Background="#FFFFEA89" Click="Button_Click_Regole">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="btnEsci" Content="ESCI" FontSize="25" FontFamily="Bahnschrift SemiBold Condensed" Margin="285,335,285,38" Background="#FFFB7676" Click="Button_Click_Esci">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="20
                            ">
                        <ContentPresenter HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Image Margin="698,366,0,0" Source="/Image1.png" Stretch="Fill"/>
        <Button x:Name="btnProfilo" Content="" HorizontalAlignment="Left" Margin="10,380,0,0" VerticalAlignment="Top" Height="49" Width="50" Background="#FFD6D6D6" />
        <Ellipse x:Name="testaOmino" HorizontalAlignment="Left" Height="22" Margin="24,386,0,0" Stroke="#FF828282" VerticalAlignment="Top" Width="22" RenderTransformOrigin="-0.195,0.915" Fill="#FF848484"/>
        <Ellipse x:Name ="corpoOmino" HorizontalAlignment="Left" Height="35" Margin="10,408,0,0" Stroke="#FF868686" VerticalAlignment="Top" Width="50" Fill="#FF848484"/>
        <Rectangle x:Name="rctSottoOmino" HorizontalAlignment="Left" Height="10" Margin="0,424,0,0" VerticalAlignment="Top" Width="100" Fill="#FFCAE9EF"/>
    </Grid>
</Window>
