<Window x:Class="MastermindStep2.Vittoria"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MastermindStep2"
        mc:Ignorable="d"
        Title="Vittoria" Height="450" Width="800">
    <Grid Background="#FFCAE9EF">
        <TextBlock TextWrapping="Wrap" Text="COMPLIMENTI!" Margin="146,71,168,269" FontSize="90" FontFamily ="Bahnschrift SemiBold Condensed"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,159,0,0" TextWrapping="Wrap" Text="HAI SUPERATO LA SFIDA!!" VerticalAlignment="Top" Height="52" Width="384" FontSize="48" FontFamily ="Bahnschrift SemiBold Condensed"/>

        <Button x:Name="btnTornaAllaHome" Content="TORNA ALLA HOME" FontSize="30" FontFamily ="Bahnschrift SemiBold Condensed" Margin="285,246,285,127" Background="#FFCCDE82" Click="Button_Click_TornaHome">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="btneEsci" Content="ESCI" FontSize="30" FontFamily ="Bahnschrift SemiBold Condensed" Margin="285,343,285,30" Background="#FFDA9592" Click="Button_Click_Esci">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
