<Window x:Class="MastermindStep2.Regole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MastermindStep2"
        mc:Ignorable="d"
        Title="Regole" Height="456" Width="861">
    <Grid>
        <Image x:Name="imgRegole" Source="Immagini/imgRegole.png" Stretch="Fill" Margin="47,21,32,55"/>
        <Button x:Name="btnTornaAllaHome" Content="TORNA INDIETRO" FontSize="25" FontFamily="Bahnschrift SemiBold Condensed" Margin="301,380,301,10" Background="#FFFB7676" Click="Button_Click_TornaIndietro">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="1"
            CornerRadius="20
                    ">
                        <ContentPresenter HorizontalAlignment="Center"
                  VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
